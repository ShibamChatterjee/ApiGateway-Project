<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        /* Add CSS styles for card layout */
        .card {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            margin: 10px;
            width: 200px;
            display: inline-block;
            vertical-align: top;
        }

        .card h2 {
            margin-top: 0;
        }
    </style>
</head>
<body>

<!-- Loop through each product in the electronics array and display it in a card -->
<% data.electronics.forEach(product => { %>
    <div class="card">
        <h2><%= product.name %></h2>
        <p>Price: <%= product.Price %></p>
        <p>Rating: <%= product.Rating %></p>
    </div>
<% }); %>

</body>
</html>
